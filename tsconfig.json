{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "skipLibCheck": true,
    "baseUrl": "src",
    // "paths": {
    //   "packages/*": ["spanner-api/packages/*"],
    //   "@polkadot/api/augment": [
    //     "spanner-api/packages/types/src/interfaces/augment-api.ts"
    //   ],
    //   "@polkadot/types/augment": [
    //     "spanner-api/packages/types/src/interfaces/augment-types.ts"
    //   ]
    // }
    "paths": {
      "@polkadot/api/augment": ["./spanner-api/packages/types/src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["./spanner-api/packages/types/src/interfaces/augment-types.ts"],
      "spanner-api/types": ["./spanner-api/packages/types/src/interfaces"],
      "spanner-api/api": ["./spanner-api/packages/api/src"],
      "packages/*": ["./spanner-api/packages/*"]
    }
    // "paths": {
    //   "spanner-interfaces/*": ["./spanner-interfaces/*"],
    //   "@polkadot/api/augment": ["./spanner-interfaces/augment-api.ts"],
    //   "@polkadot/types/augment": ["./spanner-interfaces/augment-types.ts"]
    // }
  },
  "include": ["src/**/*", "node_modules/@subql/types/dist/global.d.ts"]
}
