{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "packages/*": ["./api-interfaces/spanner-api/packages/*"],
      "@polkadot/api/augment": [
        "./api-interfaces/spanner-api/packages/types/src/interfaces/augment-api.ts"
      ],
      "@polkadot/types/augment": [
        "./api-interfaces/spanner-api/packages/types/src/interfaces/augment-types.ts"
      ]
    }
  },
  "include": ["src/**/*", "node_modules/@subql/types/dist/global.d.ts"]
}
