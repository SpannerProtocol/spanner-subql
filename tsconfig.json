{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "outDir": "dist",
    "target": "es2017",
    "baseUrl": "src",
    "skipLibCheck": true,
    "paths": {
      "@polkadot/api/augment": ["spanner-interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["spanner-interfaces/augment-types.ts"]
    }
  },
  "include": [
    "src/**/*",
    "node_modules/@subql/types/dist/global.d.ts"
  ]
}
